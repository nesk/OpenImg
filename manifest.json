{

    "name": "__MSG_extName__",
    "description": "__MSG_extDesc__",

    "version": "1.0.0",
    "manifest_version": 2,

    "default_locale": "en",
    
    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["contentscript.js"]
        }
    ],

    "permissions": [
        "tabs",
        "contextMenus",
        "notifications",
        "http://*/*", "https://*/*"
    ],

    "icons": {
        "16": "icons/main16.png",
        "48": "icons/main48.png",
        "128": "icons/main128.png"
    },

    "web_accessible_resources": [
        "icons/main48.png"
    ]

}